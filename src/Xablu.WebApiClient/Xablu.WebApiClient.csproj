<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <GeneratePackageOnBuild Condition=" '$(Configuration)' == 'Release' and '$(IsTestProject)' != 'true'">true</GeneratePackageOnBuild>
    <DefaultLanguage>en-US</DefaultLanguage> 
  </PropertyGroup>

  <!-- Assembly information -->
  <PropertyGroup>
    <Version>1.1.0.0</Version>
    <FileVersion>1.1.0.0</FileVersion>
    <Authors>Xablu</Authors>
    <Description>The Xablu WebApiClient is a C# HTTP library which aims to simplify consuming of Web API services in .NET projects.</Description>
    <Copyright>Copyright (c) 2016 Xablu</Copyright>
  </PropertyGroup>

  <!-- Package information -->
  <PropertyGroup>
    <PackageId>Xablu.WebApiClient</PackageId>
    <PackageVersion>$(Version)</PackageVersion>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>&gt;xamarin, monodroid, C#, xamarin.android, android, ios, uwp, Windows, tvOS, Mac, MacOS, Xablu, Web API, REST, ASP.NET, .NET</PackageTags>
    <PackageLicenseUrl>https://github.com/Xablu/Xablu.WebApiClient/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Xablu/Xablu.WebApiClient</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/Xablu/Xablu.WebApiClient/master/icon_xablu.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/Xablu/Xablu.WebApiClient</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    
    <Content Include="README.txt">
      <Pack>true</Pack>
      <PackagePath>README.txt</PackagePath>
    </Content>

    <PackageReference Include="fusillade" Version="1.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="Polly" Version="5.8.0" />
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.2.1" PrivateAssets="All" />
    <PackageReference Include="Refit" Version="4.7.9" />
    <PackageReference Include="System.ComponentModel" Version="4.3.0" />
    <PackageReference Include="System.Diagnostics.Contracts" Version="4.3.0" />
    <PackageReference Include="System.Dynamic.Runtime" Version="4.3.0" />
    <PackageReference Include="System.Runtime.Serialization.Primitives" Version="4.3.0" />
    <PackageReference Include="System.Net.Requests" Version="4.3.0" />
    <PackageReference Include="GraphQL.Client" Version="2.0.0-alpha.3" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Client\" />
    <Folder Include="Enums\" />
    <Folder Include="Services\" />
    <Folder Include="Options\" />
    <Folder Include="Services\GraphQL\" />
  </ItemGroup> 
  <ItemGroup>
    <Reference Include="mscorlib">
      <HintPath>..\..\..\..\..\Library\Frameworks\Xamarin.Android.framework\Versions\9.4.1.0\lib\xamarin.android\xbuild-frameworks\MonoAndroid\v1.0\mscorlib.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="HttpContentExtensions\ProgressStreamContent.cs" />
    <Compile Remove="HttpExtensions\HttpResponseMessageExtensions.cs" />
    <Compile Remove="HttpExtensions\InitializerExtensions.cs" />
    <Compile Remove="HttpExtensions\RestApiResultExtensions.cs" />
    <Compile Remove="Platforms\android\RestApiClientImplementation.cs" />
    <Compile Remove="Platforms\windows-common\RestApiClientImplementation.cs" />
    <Compile Remove="Resolvers\SimpleStringResponseResolver.cs" />
    <Compile Remove="Resolvers\SimpleJsonContentResolver.cs" />
    <Compile Remove="Resolvers\DefaultHttpResponseResolver.cs" />
    <Compile Remove="Resolvers\SimpleJsonResponseResolver.cs" />
    <Compile Remove="Resolvers\FormUrlEncodedContentResolver.cs" />
    <Compile Remove="Resolvers\DictionaryContentResolver.cs" />
    <Compile Remove="Client\IRefitClient.cs" />
    <Compile Remove="Client\RefitClient.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Platforms\.DS_Store" />
  </ItemGroup>
  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
</Project>
